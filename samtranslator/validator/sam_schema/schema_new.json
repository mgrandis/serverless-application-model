{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "AWSTemplateFormatVersion": {
      "enum": [
        "2010-09-09"
      ],
      "type": "string"
    },
    "Conditions": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "Description": {
      "description": "Template description",
      "maxLength": 1024,
      "type": "string"
    },
    "Mappings": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "Metadata": {
      "type": "object"
    },
    "Outputs": {
      "additionalProperties": false,
      "maxProperties": 60,
      "minProperties": 1,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "Parameters": {
      "additionalProperties": false,
      "maxProperties": 50,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "$ref": "#/definitions/Parameter"
        }
      },
      "type": "object"
    },
    "Resources": {
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "allOf": [
            {
              "$ref": "file:definitions/api.json#/definitions/AWS::Serverless::Api"
            }
          ],
          "type": "object",
          "required": [
            "Type",
            "Properties"
          ]
        }
      },
      "type": "object"
    },
    "Transform": {
      "if": {
        "type": "array"
      },
      "then": {
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "contains": {
          "const": "AWS::Serverless-2016-10-31"
        }
      },
      "else": {
        "enum": [
          "AWS::Serverless-2016-10-31"
        ]
      },
      "type": [
        "string",
        "array"
      ]
    },
    "Globals": {
      "type": "object"
    },
    "Properties": {
      "type": "object"
    }
  },
  "required": [
    "Resources",
    "Transform"
  ],
  "type": "object"
}